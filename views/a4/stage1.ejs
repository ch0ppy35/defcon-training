<script>
    $("#search").click(function () {
		fetch("/api/xxe/stage/1",
			{
				method: "POST",
				headers: {
					'Content-Type': 'text/xml'
				},
				body:  `<creds><user>${username.value}</user><pass>${password.value}</pass></creds>`
